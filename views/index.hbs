<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Blogs</h2>
                    <div class="breadcrumb__option">
                        <a href="/blogs">Home</a>
                        <span>Blog</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Blog Section Begin -->
<section class="blog spad">
    <div class="container">
        <div class="row">
            {{>sidebar}}
            <div class="col-lg-8 col-md-7">
                <div class="row">
                    {{#each blogs}}
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="blog__item">
                            <div class="blog__item__pic">
                                <img src="{{imagePath}}" alt="">
                            </div>
                            <div class="blog__item__text">
                                <ul>
                                    <li><i class="fa fa-calendar-o"></i> {{showDate createdAt}}</li>
                                    <li><i class="fa fa-comment-o"></i> {{Comments.length}}</li>
                                </ul>
                                <h5><a href="/blogs/{{id}}">{{title}}</a></h5>
                                <p>{{summary}}</p>
                                <a href="/blogs/{{id}}" class="blog__btn">READ MORE <span
                                        class="arrow_right"></span></a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    <div class="col-lg-12">
                        <div class="product__pagination blog__pagination">
                            {{#if totalPage}}
                            {{#if (eq currentPage 1)}}
                            <a href=""><i class="fa fa-long-arrow-left"></i></a>
                            {{else}}
                            <a href="{{addQueryParam currentUrl 'page' (subtract currentPage 1)}}"><i
                                    class="fa fa-long-arrow-left"></i></a>
                            {{/if}}

                            {{#each (range 1 totalPage currentUrl)}}
                            <a href="{{addQueryParam url 'page' index}}">{{index}}</a>
                            {{/each}}

                            {{#if (eq currentPage 3)}}
                            <a href="#"><i class="fa fa-long-arrow-right"></i></a>
                            {{else}}
                            <a href="{{addQueryParam currentUrl 'page' (add currentPage 1)}}"><i
                                    class="fa fa-long-arrow-right"></i></a>
                            {{/if}}
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Section End -->